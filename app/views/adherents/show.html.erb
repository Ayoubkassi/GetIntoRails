<div class="container mt-4">

<p style="color: green"><%= notice %></p>

<div class="jumbotron">
  <div class="d-flex justify-content-between">
    <h1 class="display-2"><%= @adherent.first_name+" "+@adherent.last_name %></h1>
    <img src="https://picsum.photos/150/150" style="border-radius: 50%" >
  </div>
  <p class="lead"></p>
  <!-- <hr class="my-4"> -->
  <p><strong>Nom : </strong><%= @adherent.last_name %></p>
  <p><strong>Prenom : </strong><%= @adherent.first_name %></p>
</div>

<div>
  <%= link_to "Edit this adherent", edit_adherent_path(@adherent) , class:"btn btn-secondary" %>
  <%= link_to "Back to adherents", adherents_path , class:"btn btn-secondary" %>
  <%= button_to "Destroy this adherent", @adherent, method: :delete , class:"btn btn-danger mt-4" %>
</div>
</div>
