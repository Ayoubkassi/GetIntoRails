<div class="container mt-4">

<p style="color: green"><%= notice %></p>

<div class="jumbotron">
  <div class="d-flex justify-content-between">
    <h1 class="display-2"><%= @document.name %></h1>
    <img src="https://picsum.photos/150/150" style="border-radius: 50%">
  </div>
  <p class="lead"></p>
  <hr class="my-4">
  <p><strong>Type : </strong><%= @document.type_doc %></p>
  <p><strong>Auteur : </strong><%= @document.auteur %></p>
  <p><strong>Empruntable : </strong><%= @document.is_empruntable %></p>
</div>

<div>
  <%= link_to "Edit this document", edit_document_path(@document) , class:"btn btn-secondary" %>
  <%= link_to "Back to documents", documents_path , class:"btn btn-secondary" %>
  <%= button_to "Destroy this document", @document, method: :delete , class:"btn btn-danger mt-4" %>
</div>

</div>
